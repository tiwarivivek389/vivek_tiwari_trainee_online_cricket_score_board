<odoo>
	<data>
		<record id="prizecaremony_app_form_view" model="ir.ui.view">
            <field name="name">prize.caremony.form</field>
            <field name="model">prize.caremony</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="receiver_name"/>
                            <field name="giver_name"/>
                            <field name="amount"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="prizecaremony_app_tree_view" model="ir.ui.view">
            <field name="name">prize.caremony.tree</field>
            <field name="model">prize.caremony</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="receiver_name"/>
                    <field name="giver_name"/>
                    <field name="amount"/>
                </tree>
            </field>
        </record>
        <record id="prizecaremony_app_search_view" model="ir.ui.view">
            <field name="name">prize.caremony.search</field>
            <field name="model">prize.caremony</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>
        <record id="prizecaremony_app_act_window" model="ir.actions.act_window">
            <field name="name">PrizeCaremony</field>
            <field name="res_model">prize.caremony</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="sub_menu_prizecaremony_app" name="PrizeCaremony" action="prizecaremony_app_act_window" parent="main_menu_cricket_tournament_app" sequence="4" />
	</data>
</odoo>