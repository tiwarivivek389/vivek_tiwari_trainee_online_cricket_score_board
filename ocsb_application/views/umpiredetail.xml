<odoo>
	<data>
		<record id="umpiredetail_app_form_view" model="ir.ui.view">
            <field name="name">umpire.detail.form</field>
            <field name="model">umpire.detail</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="button_confirm" states="draft,done" string="Confirm" class="btn-info" type="object"/>
                        <button name="button_draft" states="confirm,done" string="Draft" class="btn-draft" type="object"/>
                        <button name="button_done" states="confirm,draft" string="Done" class="btn-success" type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="confirm,draft,done"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="image" widget="image"/>
                            <field name="address"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="umpiredetail_app_tree_view" model="ir.ui.view">
            <field name="name">umpire.detail.tree</field>
            <field name="model">umpire.detail</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="image"/>
                    <field name="address"/>
                </tree>
            </field>
        </record>
        <record id="umpiredetail_app_search_view" model="ir.ui.view">
            <field name="name">umpire.detail.search</field>
            <field name="model">umpire.detail</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>
        <record id="umpiredetail_app_act_window" model="ir.actions.act_window">
            <field name="name">Umpire</field>
            <field name="res_model">umpire.detail</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="sub_menu_umpiredetail_app" name="Umpire" action="umpiredetail_app_act_window" parent="main_menu_cricket_tournament_app" sequence="4" />
	</data>
</odoo>