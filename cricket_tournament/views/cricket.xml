<odoo>
    <data>

        <!-- tournament detail -->
        <record id="tournament_detail_form_view" model="ir.ui.view">
            <field name="name">tournament.detail.form</field>
            <field name="model">tournament.detail</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="place"/>
                            <field name="tournamenttype"/>
                            <field name="team"/>
                            <field name="starting_date"/>
                            <field name="ending_date"/>
                            <field name="shedule"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="tournament_detail_tree_view" model="ir.ui.view">
            <field name="name">tournament.detail.tree</field>
            <field name="model">tournament.detail</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="place"/>
                    <field name="tournamenttype"/>
                    <field name="team"/>
                    <field name="starting_date"/>
                    <field name="ending_date"/>
                    <field name="shedule"/>
                </tree>
            </field>
        </record>
        <record id="tournament_detail_calendar_view" model="ir.ui.view">
            <field name="name">tournament.detail.calendar</field>
            <field name="model">tournament.detail</field>
            <field name="arch" type="xml">
                <calendar color="starting_date" date_start="starting_date" date_stop="ending_date">
                    <field name="name"/>
                    <field name="place"/>
                    <field name="tournamenttype"/>
                    <field name="team"/>
                    <field name="starting_date"/>
                    <field name="ending_date"/>
                </calendar>
            </field>
        </record>
        <record id="tournament_detail_graph_view" model="ir.ui.view">
            <field name="name">tournament.detail.graph</field>
            <field name="model">tournament.detail</field>
            <field name="arch" type="xml">
                <graph string="name">
                    <field name="name" group="True"/>
                    <field name="place"/>
                    <field name="tournamenttype" type="measure"/>
                    <field name="team" type="measure"/>
                    <field name="starting_date"/>
                    <field name="ending_date"/>
                </graph>
            </field>
        </record>
        <record id="tournament_detail_pivot_view" model="ir.ui.view">
            <field name="name">tournament.detail.pivot</field>
            <field name="model">tournament.detail</field>
            <field name="arch" type="xml">
                <pivot string="Timesheet">
                    <field name="name" group="True"/>
                    <field name="place"/>
                    <field name="tournamenttype"/>
                    <field name="team" type="measure"/>
                    <field name="starting_date"/>
                    <field name="ending_date"/>
                </pivot>
            </field>
        </record>
        <record id="tournament_detail_kanban_view" model="ir.ui.view">
            <field name="name">tournament.detail.kanban</field>
            <field name="model">tournament.detail</field>
            <field name="arch" type="xml">
               <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_dropdown_kanban">
                            <div class="oe_dropdown_toggle">
                                <i class="fa fa-bars fa-lg" title="Manage" aria-label="Manage"/>
                                <ul class="oe_dropdown_menu">
                                    <li>
                                        <a type="delete">Delete</a>
                                    </li>
                                    <li>
                                        <ul class="oe_dropdown_colorpicker" data-field="color" />
                                    </li>
                                </ul>                                
                            </div>
                            <div class="oe_clear"></div>
                            <div t-attf-class="oe_kanban_content">
                                Tournament Name:
                                <field name="name"/>
                                <br/>
                                Tournament Place:
                                <field name="place"/>
                                <br/>
                                Tournament Type:
                                <field name="tournamenttype"/>
                                <br/>
                                Participate Team:
                                <field name="team"/>
                                <br/>
                                Starting Date:
                                <field name="starting_date"/>
                                <br/>
                                Ending Date:
                                <field name="ending_date"/>
                                <br/>
                            </div>
                        </div>
                    </t>
                </templates>
               </kanban>
            </field>
        </record>
        <record id="tournament_detail_search_view" model="ir.ui.view">
            <field name="name">tournament.detail.search</field>
            <field name="model">tournament.detail</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" filter_domain="['|',('name','ilike',self),('place','ilike',self)]"/>
                </search>
            </field>
        </record>
        <record id="tournament_detail_act_window" model="ir.actions.act_window">
            <field name="name">Tournamnet</field>
            <field name="res_model">tournament.detail</field>
            <field name="view_mode">tree,form,calendar,graph,kanban,pivot</field>
        </record>

        <!-- match detail -->
        <record id="match_detail_form_view" model="ir.ui.view">
            <field name="name">match.detail.form</field>
            <field name="model">match.detail</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="team1name"/>
                            <field name="team2name"/>
                            <field name="matchover"/>
                            <field name="matchdatetime"/>
                            <field name="umpirename"/>
                            <field name="matchvenue"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="match_detail_tree_view" model="ir.ui.view">
            <field name="name">match.detail.tree</field>
            <field name="model">match.detail</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="team1name"/>
                    <field name="team2name"/>
                    <field name="matchover"/>
                    <field name="matchdatetime"/>
                    <field name="umpirename"/>
                    <field name="matchvenue"/>
                </tree>
            </field>
        </record>
        <record id="match_detail_kanban_view" model="ir.ui.view">
            <field name="name">match.detail.kanban</field>
            <field name="model">match.detail</field>
            <field name="arch" type="xml">
               <kanban>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_dropdown_kanban">
                            <div class="oe_dropdown_toggle">
                                <i class="fa fa-bars fa-lg" title="Manage" aria-label="Manage"/>
                                <ul class="oe_dropdown_menu">
                                    <li>
                                        <a type="delete">Delete</a>
                                    </li>
                                    <li>
                                        <ul class="oe_dropdown_colorpicker" data-field="color" />
                                    </li>
                                </ul>                                
                            </div>
                            <div class="oe_clear"></div>
                            <div t-attf-class="oe_kanban_content">
                                Match Name:
                                <field name="name"/>
                                <br/>
                                team1 Name:
                                <field name="team1name"/>
                                <br/>
                                team2 Name:
                                <field name="team2name"/>
                                <br/>
                            </div>
                        </div>
                    </t>
                </templates>
               </kanban>
            </field>
        </record>
        <record id="match_detail_act_window" model="ir.actions.act_window">
            <field name="name">Match</field>
            <field name="res_model">match.detail</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>

        <!-- team detail -->
        <record id="team_detail_form_view" model="ir.ui.view">
            <field name="name">team.detail.form</field>
            <field name="model">team.detail</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="playername"/>
                            <field name="extraplayername"/>
                            <field name="captainname"/>
                            <field name="vicecaptainname"/>
                            <field name="wicketkeeparname"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="team_detail_tree_view" model="ir.ui.view">
            <field name="name">team.detail.tree</field>
            <field name="model">team.detail</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="playername"/>
                    <field name="extraplayername"/>
                    <field name="captainname"/>
                    <field name="vicecaptainname"/>
                    <field name="wicketkeeparname"/>
                </tree>
            </field>
        </record>
        <record id="team_detail_act_window" model="ir.actions.act_window">
            <field name="name">Team</field>
            <field name="res_model">team.detail</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- user detail -->
        <record id="user_detail_form_view" model="ir.ui.view">
            <field name="name">user.detail.form</field>
            <field name="model">user.detail</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="image" widget="image"/>
                            <field name="address"/>
                            <field name="age"/>
                            <field name="role"/>
                            <field name="batting_style"/>
                            <field name="bowling_style"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="user_detail_tree_view" model="ir.ui.view">
            <field name="name">user.detail.tree</field>
            <field name="model">user.detail</field>
            <field name="arch" type="xml">
                <tree decoration-success="role=='batsman'" decoration-info="role=='bowler'" decoration-warning="role=='allrounder'" decoration-primary="role=='keeparbatsman'">
                    <field name="name"/>
                    <field name="image"/>
                    <field name="address"/>
                    <field name="age"/>
                    <field name="role"/>
                    <field name="batting_style"/>
                    <field name="bowling_style"/>
                </tree>
            </field>
        </record>
        <record id="user_detail_act_window" model="ir.actions.act_window">
            <field name="name">User</field>
            <field name="res_model">user.detail</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- prize caremony -->
        <record id="prize_caremony_form_view" model="ir.ui.view">
            <field name="name">prize.caremony.form</field>
            <field name="model">prize.caremony</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="button_confirm" states="draft,done" string="Confirm" class="btn-info" type="object"/>
                        <button name="button_draft" states="confirm,done" string="Draft" class="btn-draft" type="object"/>
                        <button name="button_done" states="confirm,draft" string="Done" class="btn-success" type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="confirm,draft,done"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="receiver_name"/>
                            <field name="giver_name"/>
                            <field name="amount"/>
                        </group>
                        <notebook>
                            <page string="Name">
                                <field name="name"/>
                            </page>
                            <page string="Player Name">
                                <field name="receiver_name"/> 
                            </page>
                            <page string="giver Name">
                                <field name="receiver_name"/> 
                            </page>
                            <page string="amount">
                                <field name="receiver_name"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="prize_caremony_tree_view" model="ir.ui.view">
            <field name="name">prize.caremony.tree</field>
            <field name="model">prize.caremony</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="receiver_name"/>
                    <field name="giver_name"/>
                    <field name="amount"/>
                </tree>
            </field>
        </record>
        <record id="prize_caremony_act_window" model="ir.actions.act_window">
            <field name="name">Prize Caremony</field>
            <field name="res_model">prize.caremony</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- toss detail -->
        <record id="toss_detail_form_view" model="ir.ui.view">
            <field name="name">toss.detail.form</field>
            <field name="model">toss.detail</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="team" invisible="1"/>
                            <field name="tosswinnername"/>
                            <field name="decide" widget="radio"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="toss_detail_tree_view" model="ir.ui.view">
            <field name="name">toss.detail.tree</field>
            <field name="model">toss.detail</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="tosswinnername"/>
                    <field name="decide" widget="radio"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>
        <record id="toss_detail_act_window" model="ir.actions.act_window">
            <field name="name">Toss</field>
            <field name="res_model">toss.detail</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- score board -->
        <record id="score_board_form_view" model="ir.ui.view">
            <field name="name">score.board.form</field>
            <field name="model">score.board</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <notebook>
                            <page string="scoreboard">
                                <group>
                                    <field name="totalrun"/>
                                </group>
                                <group>
                                    <field name="name"/>
                                </group>
                                <group>
                                    <field name="over"/>
                                </group>
                            </page>
                            <page string="selectbatsman">
                                <group>
                                    <field name="stricker"/>
                                    <field name="nonstricker"/>
                                </group>
                            </page>
                            <page string="selectbowler">
                                <group>
                                    <field name="bowler"/>
                                </group>
                            </page>
                        </notebook>
                        <group>
                            <group>
                                <button name="button_run_0" string="0" class="btn-info" type="object"/>
                                <button name="button_run_1" string="1" class="btn-info" type="object"/>
                            </group>
                            <group>
                                <button name="button_run_2" string="2" class="btn-info" type="object"/>
                                <button name="button_run_wd" string="Wide" class="btn-info" type="object"/>
                            </group>
                            <group>
                                <button name="button_run_3" string="3" class="btn-info" type="object"/>
                                <button name="button_run_4" string="4" class="btn-info" type="object"/>
                            </group>
                            <group>
                                <button name="button_run_5" string="5" class="btn-info" type="object"/>
                                <button name="button_run_out" string="Out" class="btn-info" type="object"/>
                            </group>
                            <group>
                                <button name="button_run_6" string="6" class="btn-info" type="object"/>
                                <button name="button_run_7" string="7" class="btn-info" type="object"/>
                            </group>
                            <group>
                                <button name="button_run_nb" string="NB" class="btn-info" type="object"/>
                                <button name="button_run_bye" string="Bye" class="btn-info" type="object"/>
                            </group>
                            <group>
                                <field name="description"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="score_board_tree_view" model="ir.ui.view">
            <field name="name">score.board.tree</field>
            <field name="model">score.board</field>
            <field name="arch" type="xml">
                <tree decoration-success="name=='firstinning'" decoration-primary="name=='secondinning'">
                    <field name="name"/>
                    <field name="over"/>
                    <field name="ball"/>
                    <field name="run"/>
                    <field name="typeofrun"/>
                    <field name="selectruninextra"/>
                    <field name="selectbatsmanisout"/>
                    <field name="stricker"/>
                    <field name="nonstricker"/>
                    <field name="bowler"/>
                </tree>
            </field>
        </record>
        <record id="score_board_graph_view" model="ir.ui.view">
            <field name="name">score.board.graph</field>
            <field name="model">score.board</field>
            <field name="arch" type="xml">
                <graph string="Score Board"> 
                    <field name="ball" type="col"/>
                    <field name="name" group="True"/>
                    <field name="over" type="measure"/>
                    <field name="run" type="measure"/>
                </graph>
            </field>
        </record>
        <record id="score_board_pivot_view" model="ir.ui.view">
            <field name="name">score.board.pivot</field>
            <field name="model">score.board</field>
            <field name="arch" type="xml">
                <pivot string="score board">
                    <field name="name" type="col"/>
                    <field name="over" type="col"/>
                    <field name="ball" type="col"/>
                    <field name="run" type="row"/>
                </pivot>
            </field>
        </record>
        <record id="score_board_search_view" model="ir.ui.view">
            <field name="name">score.board.search</field>
            <field name="model">score.board</field>
            <field name="arch" type="xml">
                <search>
                    <field name="stricker" filter_domain="['|',('stricker','ilike',self),('typeofrun','ilike',self)]"/>
                </search>
            </field>
        </record>
        <record id="score_board_act_window" model="ir.actions.act_window">
            <field name="name">Score Board</field>
            <field name="res_model">score.board</field>
            <field name="view_mode">tree,form,graph,pivot</field>
        </record>

        <!-- tournamentdashboard -->
        <record id="tournament_detail_dashboard_view" model="ir.ui.view">
            <field name="name">tournament.detail.dashboard</field>
            <field name="model">tournament.detail</field>
            <field name="arch" type="xml">
                <dashboard>
                    <view type="graph" ref="cricket_tournament.tournament_detail_graph_view"/>
                    <group>
                        <aggregate name="team" field="team" string="team"/>
                    </group>
                    <view type="pivot" ref="cricket_tournament.tournament_detail_pivot_view"/>
                </dashboard>
            </field>
        </record>
        <record id="tournament_dashboard_act_window" model="ir.actions.act_window">
            <field name="name">DashBoard</field>
            <field name="res_model">tournament.detail</field>
            <field name="view_mode">dashboard</field>
        </record>


        <!-- scoreboarddashboard -->
        <record id="score_board_dashboard_view" model="ir.ui.view">
            <field name="name">score.board.dashboard</field>
            <field name="model">score.board</field>
            <field name="arch" type="xml">
                <dashboard>
                    <view type="graph" ref="cricket_tournament.score_board_graph_view"/>
                    <view type="pivot" ref="cricket_tournament.score_board_pivot_view"/>
                </dashboard>
            </field>
        </record>
        <record id="score_board_dashboard_act_window" model="ir.actions.act_window">
            <field name="name">DashBoard</field>
            <field name="res_model">score.board</field>
            <field name="view_mode">dashboard</field>
        </record>



        <menuitem id="main_menu_live_cricket_score_board" name="Cricket Tournament" action="tournament_dashboard_act_window" web_icon="cricket_tournament,static/description/index.png"/>

        <menuitem id="sub_menu_live_cricket_score_board" name="Configuration" parent="main_menu_live_cricket_score_board" sequence="4"/>

        <menuitem id="sub_menu_tournament_detail" name="Tournament" action="tournament_detail_act_window" parent="sub_menu_live_cricket_score_board" sequence="1" />

        <menuitem id="sub_menu_match_detail" name="Match" action="match_detail_act_window" parent="sub_menu_live_cricket_score_board" sequence="2" />

        <menuitem id="sub_menu_team_detail" name="Team" action="team_detail_act_window" parent="sub_menu_live_cricket_score_board" sequence="3" />

        <menuitem id="sub_menu_user_detail" name="User" action="user_detail_act_window" parent="sub_menu_live_cricket_score_board" sequence="4" />

        <menuitem id="sub_menu_score_board" name="Score Board" parent="main_menu_live_cricket_score_board" sequence="1"/>

        <menuitem id="sub_menu_toss_detail" name="Toss" action="toss_detail_act_window" parent="sub_menu_score_board" sequence="1" />

        <menuitem id="sub_menu_score" name="Score Board" action="score_board_act_window" parent="sub_menu_score_board" sequence="2" />

        <menuitem id="sub_menu_prize_caremony" name="Prize Caremony" action="prize_caremony_act_window" parent="main_menu_live_cricket_score_board" sequence="2" groups="cricket_tournament.group_organizer" />

        <menuitem id="sub_menu_report" name="Reporting" action="score_board_dashboard_act_window" parent="main_menu_live_cricket_score_board" sequence="3" groups="cricket_tournament.group_organizer"/>
    </data>
</odoo>


